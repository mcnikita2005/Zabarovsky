x1, y1 = 1, 2
x2, y2 = 3, 4
x3, y3 = 5, 6
import math
a = math.sqrt((x2 - x1)**2 + (y2 - y1)**2)
b = math.sqrt((x3 - x2)**2 + (y3 - y2)**2)
c = math.sqrt((x1 - x3)**2 + (y1 - y3)**2)
p = (a + b + c) / 2
s = math.sqrt(p * (p - a) * (p - b) * (p - c))
print("Периметр треугольника:", a + b + c)
print("Площадь треугольника:", s)
